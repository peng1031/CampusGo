/* pages/map/search/search.wxss */
.root {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 10px;
}

.input {
    width: 70%;
    height: 30px;
    border: 1px solid grey;
    border-radius: 15px;
    padding-left: 15px;
}

.input_search {
    width: 20%;
    height: 30px;
    text-align: center;
    border: 1px solid grey;
    border-radius: 15px;
    background-color: #07c160;
    color: white;
    font-size: 18px;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
}

.result {
    margin: 15px;
}

.middle {
    font-size: large;
    color: grey;
}

.result-list {
    height: 50px;
    margin: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid gainsboro;
}

.item {
    display: flex;
    flex-direction: column;
}

.icon-right {
  width: 50rpx;
  height: 50rpx;
}

/* 标题部分 */
.read-in {
  padding: 0 30rpx;
}

.headline {
  padding-top: .5rem;
}

.head-headline {
  width: 100%;
  /* height: 45rpx; */
  display: flex;
  font-size: 32rpx;
  font-weight: bold;
  /* align-content: center; */
  align-items: center;
  justify-content: space-between;
}

.headline-size {
  position: relative;
  left: -210rpx;
  top: 0rpx;
}

/* 内容部分 */
.lately-main {
  margin-top: 20rpx;
  overflow: hidden;
}

.lately-main .chunk {
  display: inline-block;
  font-size: 24rpx;
  line-height: 20rpx;
  padding: 10rpx 21rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
  border: 1px solid #DCDCDC;
  border-radius: 18.5rpx;
  color: #666666;
  margin-bottom: 26rpx;
  /* float: left; */
}