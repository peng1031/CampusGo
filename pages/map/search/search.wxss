/* pages/map/search/search.wxss */
page {
  background-color: #f5f7fa;
  padding: 20rpx;
}

.root {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.input:focus {
  background-color: #fff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
}

.input_search {
  width: 160rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.input_search:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #096dd9, #1890ff);
}

/* 搜索历史和结果区域 */
.read-in, .result {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.head-headline {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.icon-right {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

.headline-size {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 历史记录标签 */
.lately-main {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.chunk {
  padding: 16rpx 30rpx;
  background-color: #f5f7fa;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.chunk:active {
  background-color: #e6f7ff;
  color: #1890ff;
  transform: scale(0.98);
}

/* 搜索结果列表 */
.result-list {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.result-list:active {
  background-color: #f5f7fa;
}

.item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item view:first-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item view:last-child {
  font-size: 24rpx;
  color: #999;
}

.middle {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}