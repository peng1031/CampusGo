/* pages/map/map.wxss */
.card {
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f7fa;
  padding: 0;
}

.card-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  background-color: #fff;
  padding: 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.card-top-left {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.card-top-left-view {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  padding: 0 30rpx;
}

.card-top-circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.start {
  background-color: #1890ff;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.3);
}

.end {
  background-color: #52c41a;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.card-top-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.card-top-right {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 20rpx;
}

.card-top-right-button {
  width: 100rpx;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.card-top-right-button:active {
  background-color: #096dd9;
  transform: scale(0.98);
}

.card-top-middle {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 10px 10px 0;
  /* margin-left: 10px; */
}

.card-top-middle-button {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.relative {
  position: relative;
  height: 60rpx;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.card-bottom-category {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 0 20rpx;
}

.card-bottom-category-label {
  width: 140rpx;
  height: 60rpx;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s ease;
  transform-origin: center;
  position: relative;
  overflow: hidden;
}

.card-bottom-category-label::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 3rpx;
  background-color: #39a096;
  transition: all 0.3s ease;
  transform: translateX(-50%);
}

.card-bottom-category-label:active {
  transform: scale(0.95);
}

.choose {
  background-color: #39a096;
  color: white;
  font-weight: 500;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(57, 160, 150, 0.3);
}

.choose::after {
  width: 100%;
}

.map_right_card {
  height: 190px;
  position: absolute;
  right: 0px;
  margin-top: -20px;
}

.duration_and_distance {
  display: flex;
  justify-content: space-between;
}

.location {
  width: 60px;
  height: 65px;
}

.img {
  width: 55px;
  height: 55px;
  margin-right: 5px;
  margin-bottom: 10px;
}

.instruction {
  height: 55px;
  width: 55px;
  background-color: #73a5d6;
  border-radius: 50%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  margin-right: 5px;
}

.duration_and_distance_style {
  display: flex;
  align-items: flex-end;
  font-size: larger;
  font-weight: bold;
}

.duration_and_distance_text {
  background-color: white;
  padding: 8px;
}

.card-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 50px;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  margin: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.card-bottom-button {
  width: 100%;
  height: 100%;
  background-color: #f3f3ff;
  border: 1px solid #0152d6;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: larger;
  color: #0152d6;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.road {
  display: flex;
  text-align: left;
}

.r_duration_and_distance {
  margin-bottom: 15px;
}

.road_start {
  margin-bottom: 10px;
}

.road_end {
  margin-top: 10px;
}

/* 弹窗动画 */
@keyframes dialogFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes imageFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 地点详情弹窗 */
.dialog-content {
  padding: 30rpx;
  animation: dialogFadeIn 0.3s ease-out;
}

.dialog-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  animation: imageFadeIn 0.5s ease-out;
}

.dialog-image:active {
  transform: scale(0.98);
}

.dialog-aliases {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding: 0;
  display: inline-block;
}

.dialog-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  padding: 0;
  margin-top: 20rpx;
}

/* 轮播图样式 */
.dialog-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.dialog-swiper .dialog-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.dialog-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.dialog-swiper .wx-swiper-dot-active {
  width: 16rpx;
  background: #ffffff;
  border-radius: 4rpx;
}

/* 分类列表弹窗 */
.dialog-list {
  max-height: 60vh;
  overflow-y: auto;
}

.dialog-list-item {
  padding: 12px 15px;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.3s ease;
  font-size: 15px;
  color: #333;
}

.dialog-list-item:active {
  background-color: #f8f9fa;
}

/* 弹窗标题样式 */
.mp-dialog__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 弹窗按钮样式 */
.mp-dialog__btn {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
  padding: 24rpx 0;
  transition: all 0.3s ease;
  border-top: 1rpx solid #f0f0f0;
}

.mp-dialog__btn:active {
  background-color: #f5f7fa;
  color: #096dd9;
}

page {
  margin: 0;
  padding: 0;
  height: 100vh;
  background-color: #f5f7fa;
}