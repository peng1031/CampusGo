/* 弹窗动画 */
@keyframes dialogFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes imageFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.dialog-content {
    padding: 30rpx;
    animation: dialogFadeIn 0.3s ease-out;
}

.dialog-image {
    width: 100%;
    height: 400rpx;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    animation: imageFadeIn 0.5s ease-out;
}

.dialog-image:active {
    transform: scale(0.98);
}

.dialog-aliases {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    padding: 0;
    display: inline-block;
}

.dialog-desc {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
    padding: 0;
    margin-top: 20rpx;
}

/* 轮播图样式 */
.dialog-swiper {
    width: 100%;
    height: 400rpx;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.dialog-swiper .dialog-image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

