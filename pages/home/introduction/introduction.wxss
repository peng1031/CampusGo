/* 全局容器 */
.intro-body {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-top: 10rpx;
  padding-bottom: 40rpx;
}

/* 顶部学校全貌图片 */
.school-header {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.school-header image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.school-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.6));
}

.school-title {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: #fff;
  padding: 0 40rpx;
}

.school-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.school-motto {
  display: block;
  font-size: 32rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

/* 通用section样式 */
.section {
  padding: 30rpx;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.section:active {
  transform: scale(0.98);
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1a73e8;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -8rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #1a73e8;
  border-radius: 2rpx;
}

/* 学校简介部分 */
.intro-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.intro-text {
  margin-bottom: 0;
}

.intro-text text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  margin-bottom: 20rpx;
  text-align: justify;
}

.intro-image {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 特色亮点部分 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 10rpx;
}

.feature-item {
  background-color: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.feature-item:active {
  background-color: #f0f2f5;
  transform: translateY(2rpx);
}

.feature-icon {
  font-size: 56rpx;
  color: #1a73e8;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 校园风光部分 */
.gallery-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.gallery-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.gallery-item image {
  width: 100%;
  height: 320rpx;
  transition: transform 0.3s ease;
}

.gallery-item:active image {
  transform: scale(1.05);
}

.gallery-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: #fff;
  padding: 20rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 联系我们部分 */
.contact-info {
  padding: 20rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.contact-item:active {
  background-color: #f0f2f5;
}

.contact-item text:first-child {
  font-size: 36rpx;
  color: #1a73e8;
  margin-right: 24rpx;
}

.contact-item text:last-child {
  font-size: 28rpx;
  color: #666;
  flex: 1;
} 