/* 通用section样式 */
.section {
  width: 92%;
  max-width: 750rpx;
  padding: 30rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1a73e8;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -8rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #1a73e8;
  border-radius: 2rpx;
}

/* 团队介绍部分 */
.team-content {
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.team-text text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  text-align: justify;
  width: 100%;
  word-wrap: break-word;
}

/* 核心团队部分 */
.team-grid {
  display: grid;
  gap: 24rpx;
  margin-top: 10rpx;
  width: 100%;
}

.team-item {
  background-color: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.team-item:active {
  background-color: #f0f2f5;
  transform: translateY(2rpx);
}

.team-icon {
  font-size: 56rpx;
  color: #1a73e8;
  margin-bottom: 16rpx;
}

.team-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  width: 100%;
  word-wrap: break-word;
}

.team-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  width: 100%;
  word-wrap: break-word;
}

.team-members {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(26, 115, 232, 0.1);
  width: 100%;
}

.team-members text {
  display: inline;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
  white-space: nowrap;
}

.team-members text:not(:last-child) {
  margin-right: 4rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 