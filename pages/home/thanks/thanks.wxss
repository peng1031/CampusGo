/* 全局容器 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
  margin-top: -180rpx;
}

/* Banner样式 */
.banner {
  width: 100%;
  height: 160rpx;
  background: linear-gradient(135deg, #1a73e8, #0d47a1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
  overflow: hidden;
  margin-top: -20rpx;
  border-radius: 0 0 30rpx 30rpx;
  z-index: 1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.banner-content {
  text-align: center;
  position: relative;
  z-index: 1;
  padding: 0 40rpx;
}

.banner-title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 通用section样式 */
.section {
  width: 620rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1a73e8;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -8rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #1a73e8;
  border-radius: 2rpx;
}

/* 团队介绍部分 */
.team-content {
  padding: 20rpx 0;
}

.team-text text {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  text-align: justify;
}

/* 核心团队部分 */
.team-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 24rpx;
  margin-top: 10rpx;
}

.team-item {
  background-color: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.team-item:active {
  background-color: #f0f2f5;
  transform: translateY(2rpx);
}

.team-icon {
  font-size: 56rpx;
  color: #1a73e8;
  margin-bottom: 16rpx;
}

.team-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.team-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.team-members {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(26, 115, 232, 0.1);
}

.team-members text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
}

.team-members text:not(:last-child) {
  margin-bottom: 8rpx;
}

/* 特别鸣谢部分 */
.thanks-info {
  padding: 20rpx 0;
}

.thanks-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.thanks-item:active {
  background-color: #f0f2f5;
}

.thanks-item text:first-child {
  font-size: 36rpx;
  color: #1a73e8;
  margin-right: 24rpx;
}

.thanks-item text:last-child {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 动画效果 */
.animate {
  animation: fadeInUp 0.6s ease-out;
}

.delay-1 {
  animation-delay: 0.2s;
}

.delay-2 {
  animation-delay: 0.4s;
}

.delay-3 {
  animation-delay: 0.6s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 