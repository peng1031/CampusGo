.list-landscape-title {
  padding-top: 5px;
  font-size: 22px;
  margin-left: 10px;
  font-weight: bold;
}

.list-landscape-container {
  margin-top: 10px;
  position: relative;
}

.list-landscape-container .wx-swiper-dot.wx-swiper-dot-active {
  width: 33rpx;
  border-radius: 15rpx;
}

/* 指示点靠右 */
.wx-swiper-dots {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.list-landscape-container-swiper {
  height: 388rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(0);
  transition: all 0.3s ease;
}

.list-landscape-container-swiper:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
}

.list-landscape-container-swiper-item {
  margin-left: 22rpx;
  position: relative;
  transition: all 0.3s ease;
}

.list-landscape-container-swiper-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.4));
  pointer-events: none;
}

.list-landscape-container-swiper-item-img {
  width: 100%;
  height: auto;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

