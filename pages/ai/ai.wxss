/* pages/ai.wxss */
.ai-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.chat-history {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.message-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.message-item.user-message {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.message-item.user-message .message-avatar {
  margin-right: 0;
  margin-left: 10rpx;
}

.message-avatar image {
  width: 100%;
  height: 100%;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.message-bubble {
  padding: 15rpx;
  border-radius: 8rpx;
  max-width: 85%;
  word-break: break-all;
  font-size: 26rpx;
  line-height: 1.4;
}

.user-bubble {
  background-color: #07c160;
  color: #fff;
  margin-left: auto;
}

.ai-bubble {
  background-color: #fff;
  color: #333;
  margin-right: auto;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.message-time {
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
  text-align: right;
}

/* 输入区域容器 */
.input-container {
  padding: 10rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

/* 建议问题区域 */
.suggested-questions {
  margin-bottom: 10rpx;
}

.suggested-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.suggested-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.suggested-item {
  background-color: #f0f0f0;
  color: #333;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

/* 输入框区域 */
.input-area {
  display: flex;
  align-items: flex-end;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 8rpx;
}

.input-text {
  flex: 1;
  min-height: 60rpx;
  max-height: 160rpx;
  padding: 12rpx;
  font-size: 26rpx;
  background-color: #fff;
  border-radius: 8rpx;
  line-height: 1.4;
}

.send-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  opacity: 0.5;
  flex-shrink: 0;
  background-color: #1890ff;
  border-radius: 30rpx;
  transition: all 0.3s ease;
  color: #fff;
  font-size: 26rpx;
}

.send-btn.active {
  opacity: 1;
  transform: scale(1.05);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.3);
}

.send-btn image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.typing-cursor {
  display: inline-block;
  width: 2px;
  height: 20rpx;
  background-color: #333;
  margin-left: 4rpx;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.loading-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #07c160;
  border-radius: 50%;
  margin: 0 4rpx;
  animation: loading 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.daily-limit {
  text-align: center;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin: 10rpx 20rpx;
  font-size: 24rpx;
  color: #666;
}