.towxml-container {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 16rpx 0;
}

.h3 {
  font-size: 30rpx;
  font-weight: bold;
  margin: 14rpx 0;
}

.p {
  margin: 10rpx 0;
}

.code-block {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.code-header {
  background-color: #e0e0e0;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.code-language {
  font-size: 24rpx;
  color: #666;
}

.code-content {
  padding: 20rpx;
}

.code {
  font-family: monospace;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.ul, .ol {
  margin: 10rpx 0;
  padding-left: 40rpx;
}

.li {
  margin: 8rpx 0;
} 